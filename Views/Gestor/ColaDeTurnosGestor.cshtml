@{
    //Se crea un contador en 0 para validar cuando llegue a 1 saber cual va ser el siguiente turno
    int ConteoTurnos1 = 0;
    
    //a esta variable se agregara el valor en este caso el Id
    int TurnoSiguiente = 0;

    //El respectivo foreach para buscar al proximo turno que se le dara siguiente
    foreach(var t in ViewBag.BusquedaTurnos){
        ConteoTurnos1++;
        if(ConteoTurnos1 == 1){
            TurnoSiguiente = t.Id;
        }
    }
}

<div class="row">
    <div class="col-md-12 text-center">
        <h1>COLA DE TURNOS</h1>
    </div>
</div>


<div class="row">
    <div class="col-md-3 mt-5 text-center">
        @if(TurnoSiguiente != 0){
            if(@ViewBag.BusquedaEstadoAtendiendo == null){
                <a asp-controller="Gestor" asp-action="SiguienteTurno" asp-route-id="@TurnoSiguiente" class="btn btn-success mb-2" >Siguiente turno</a>
            }
        }
    </div>
    <div class="col-md-4 offset-md-5  text-center">
        @if(ViewBag.BusquedaEstadoAtendiendo != null){
            <div class="SigTurno">
                
                    <p style="color: white;">@ViewBag.BusquedaEstadoAtendiendo.Tiket</p>
                
            </div>

            <a asp-controller="Gestor" asp-action="FinalizarTurno" asp-route-tiket="@ViewBag.BusquedaEstadoAtendiendo.Tiket" class="btn btn-danger mt-3">Finalizar turno</a>
        }
    </div>
</div>

<div>
    @foreach (var i in ViewBag.BusquedaTurnos)
    {
        <div class="row">
            <div style="background-color: #0597F2;" class="col-md-4 EstilosGenerales mb-1">
                <h1 style="color: white;">@i.Tiket</h1>
            </div>
        </div>

    }
    <div class="row">
        <div class="col-md-3 text-center mt-2">
            <a asp-controller="Gestor" asp-action="Dashboard" class="btn btn-secondary">Regresar</a>
        </div>
    </div>
</div>


